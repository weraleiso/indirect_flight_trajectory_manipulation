<?xml version="1.0"?>

<launch>
  <arg name="namespace_global" default="global"/>
  <arg name="namespace" default="spawn"/>
  <arg name="model_name" default="model"/>
  <arg name="model" default="$(find trajectory_reshaping_world_visualizer)/resources/tree_simplified/tree_simplified.xacro"/>
  <arg name="tf_prefix" default="$(arg namespace)"/>
  <arg name="x" default="27.5"/>
  <arg name="y" default="-4.0"/>
  <arg name="z" default="0.01"/> <!--0.1 -->
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <!-- send the robot XML to param server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(arg model)' namespace:=$(arg namespace)"/>
  <param name="tf_prefix" type="string" value="$(arg tf_prefix)" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_$(arg model_name)" pkg="gazebo_ros" type="spawn_model" args="-gazebo_namespace $(arg namespace_global)/gazebo -param robot_description -urdf -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw) -model tree" respawn="false" output="screen">
  </node>
</launch>
