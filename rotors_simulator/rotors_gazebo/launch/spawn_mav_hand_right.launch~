<?xml version="1.0"?>

<launch>
  <arg name="namespace" default="bebop2_hand_right"/>
  <arg name="model" default="$(find trajectory_reshaping_world_visualizer)/res/realistic_hand/hand.xacro"/>
  <arg name="tf_prefix" default="$(optenv ROS_NAMESPACE)"/>
  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>

  <!-- send the robot XML to param server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(arg model)' namespace:=$(arg namespace)"/>
  <param name="tf_prefix" type="string" value="$(arg tf_prefix)" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_$(arg namespace)" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -x $(arg x) -y $(arg y) -z $(arg z) -model $(arg namespace)" respawn="false" output="screen">
  </node>
</launch>
