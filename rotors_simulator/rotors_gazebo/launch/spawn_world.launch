<?xml version="1.0"?>

<launch>
  <arg name="namespace_global" default="global"/>
  <arg name="namespace" default="spawn"/>
  <arg name="model_name" default="model"/>
  <arg name="model" default="$(find trajectory_reshaping_world_visualizer)/resources/world_simplified/world_simplified.xacro"/>
  <arg name="tf_prefix" default="$(arg model_name)"/>
  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>

  <!-- send the robot XML to param server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(arg model)' namespace:=$(arg namespace)"/>
  <param name="tf_prefix" type="string" value="$(arg tf_prefix)" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_$(arg model_name)" pkg="gazebo_ros" type="spawn_model" args="-gazebo_namespace $(arg namespace_global)/gazebo -param robot_description -urdf -x $(arg x) -y $(arg y) -z $(arg z) -model $(arg model_name)" respawn="false" output="screen">
  </node>
</launch>
